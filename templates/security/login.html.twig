{% extends 'base.html.twig' %}

{% block title %}Zaloguj{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <h1 class="h3 mb-3 font-weight-normal">Zaloguj się</h1>
    <div class="form-group">
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    </div>
    <div class="form-group">
    <label for="inputPassword">Hasło</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="form-group form-check checkbox mb-3">
        <label>
            <input type="checkbox" class="form-check-input" name="_remember_me"> Zapamiętaj mnie
        </label>
    </div>

    <div>
        <p>
            <a href="{{path('app_forgot_password_request')}}" class="btn btn-link">Nie pamiętam hasła</a>
        </p>
    </div>

    <button class="btn btn-lg btn-primary" type="submit">
        Zaloguj
    </button>
</form>
{% endblock %}
