<form method="post" action="{{ path('app_polling_delete', {'id':polling.id}) }}"
      onsubmit="return confirm('Na pewno chcesz usunąć tą ankietę?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ polling.id) }}">
    <button class="btn btn-sm btn-outline-danger rounded-left-0">{% trans %}deletePolling{% endtrans %}</button>
</form>
