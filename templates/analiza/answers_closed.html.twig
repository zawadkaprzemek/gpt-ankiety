<table class="table table-striped">
    <thead>
        <tr>
            <th style="width: 20%">Jedna odpowiedź</th>
            <th style="width: 50%;text-align: center;">
                <span style="text-align: left; width: 33%;display: inline-block;">0%</span>
                <span style="width: 30%; display: inline-block;">50%</span>
                <span style="text-align: right; width: 33%; display: inline-block;">100%</span>
            </th>
            <th style="width: 15%">procentowo</th>
            <th style="width: 15%">ile głosów</th>
        </tr>
    </thead>
    <tbody>
        {% for index,answer in question.answers %}
            {% if results.summary.results[(index+1)] is defined %}
            <tr>
                <td>{{ answer.content }}</td>
                <td>
                    <div class="progress">
                        <div class="progress-bar {{ results.summary.results[(index+1)].percent|result_colorClosed(results.summary.results) }}" role="progressbar" style="width: {{ results.summary.results[(index+1)].percent }}%" aria-valuenow="{{ results.summary.results[(index+1)].percent }}" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </td>
                <td>{{ results.summary.results[(index+1)].percent~'%' }}</td>
                <td>{{ results.summary.results[(index+1)].count }}</td>
            </tr>
                {% else %}
                {{ dump(results.summary.results, index) }}
            {% endif %}
        {% endfor %}

    </tbody>
</table>