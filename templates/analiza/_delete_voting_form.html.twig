<form method="post" action="{{ path('app_analiza_removerespondentvotes', {'id':user.id}) }}"
      onsubmit="return confirm('Na pewno chcesz usunąć odpowiedzi tego respondenta?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-sm btn-link btn-link-danger" title="Usuń odpowiedzi tego respondenta"><i class="fas fa-trash"></i></button>
</form>
